---
// The default for how a page should look on this website.
//
// This is different than the BaseLayout. The BaseLayout is
// astro boilerplate. This layout is specific to the layout to
// the configuration of this particular website.
import BaseLayout from "@layouts/BaseLayout.astro";
import Footer from "@components/footer/Footer.astro";
import Header from "@components/header/Header.astro";

import "../styles/global.css";

interface Props {
    pageTitle: string;
}

const { pageTitle } = Astro.props;
---

<BaseLayout pageTitle={pageTitle}>
    <div class="container">
        <Header />
        <slot />
        <Footer />
    </div>
</BaseLayout>

<style>
    .container {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }
</style>
